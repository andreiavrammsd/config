{
    "go.lintTool": "golangci-lint",
    "go.lintFlags": [
        "--path-mode=abs",
        "--fast-only"
    ],
    "go.formatTool": "custom",
    "go.alternateTools": {
        "customFormatter": "golangci-lint"
    },
    "go.formatFlags": [
        "fmt",
        "--stdin"
    ],
    "go.vetOnSave": "workspace",
    "go.coverageDecorator": {
        "type": "gutter"
    },
    "go.inferGopath": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
}
